
page{background-color: #fff}
.collection{}
/* 收藏列表 */
.me_collection{margin:0rpx 15rpx 15rpx 15rpx;}
.other_positions_list{margin-top: 15rpx; -webkit-box-shadow: 5rpx 5rpx 15rpx rgba(0,0,0,0.2); box-shadow: 5rpx 5rpx 15rpx rgba(0,0,0,0.2);padding: 20rpx;border-radius: 20rpx;}
.positions_list_title{display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-orient: horizontal;-webkit-box-direction: normal;-webkit-flex-direction: row;flex-direction: row;-webkit-box-align: center;-webkit-align-items: center;align-items: center;}
.positions_list_title>view:nth-child(1){-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;font-size: 1.2em;font-weight: 600;}
.positions_list_title>view:nth-child(2){font-size: 0.9em;font-weight: 600;color: #2eb6a9;}
.positions_list_info{margin-top: 10rpx;color: #646464;font-size: 0.9em;}
.positions_list_tag{margin: 20rpx 0rpx;}
.tags{padding: 10rpx;background-color: #f5f5f5;margin-right: 10rpx;font-size: 0.8em;color: #646464;}
.positions_list_recruitment_user{display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-orient: horizontal;-webkit-box-direction: normal;-webkit-flex-direction: row;flex-direction: row;margin: 10rpx 0rpx;-webkit-box-align: center;-webkit-align-items: center;align-items: center;}
.positions_list_recruitment_user>view:nth-child(1){-webkit-box-flex:1;-webkit-flex:1;flex:1;font-size: 0.8em;}
.positions_list_recruitment_user>view:nth-child(1)>text{margin-left: 10rpx;}
.positions_list_recruitment_user>view:nth-child(2){font-size: 0.8em;}
/* 空数据提示 */
.null_collection{height: 100vh;display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-orient: vertical;-webkit-box-direction: normal;-webkit-flex-direction: column;flex-direction: column; -webkit-box-align: center; -webkit-align-items: center; align-items: center;-webkit-box-pack: center;-webkit-justify-content: center;justify-content: center;}
.null_collection>view:nth-child(1){padding: 10rpx;}
.null_collection>view:nth-child(2){font-size: 0.9em;color: #999999;}

